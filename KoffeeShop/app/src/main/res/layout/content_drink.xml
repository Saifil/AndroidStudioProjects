<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/koffingback"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saifil.koffeeshop.DrinkActivity"
    tools:showIn="@layout/activity_drink">

    <ImageView
        android:id="@+id/my_img_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/txt_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_img_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        style="@style/myText"
        android:text="@string/textview_title_textView" />

    <TextView
        android:id="@+id/txt_body_id"
        style="@style/myText.smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/textview_body" />
</RelativeLayout>
