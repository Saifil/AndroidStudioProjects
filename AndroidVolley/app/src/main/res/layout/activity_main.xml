<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saifil.androidvolley.MainActivity">

    <TextView
        android:id="@+id/server_res_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/server_response"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_server_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/get_response" />

    <Button
        android:id="@+id/img_nav_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_server_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/goto_image" />

    <Button
        android:id="@+id/btn_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_nav_btn_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/get_uer_info" />

    <TextView
        android:id="@+id/txt_usr_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_res_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/txt_email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_usr_name_id"
        android:layout_alignStart="@+id/txt_usr_name_id"
        android:layout_below="@+id/txt_usr_name_id"
        android:layout_marginTop="41dp"
        android:text="@string/textview" />

    <Button
        android:id="@+id/json_array_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_user_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="recycler" />
</RelativeLayout>
