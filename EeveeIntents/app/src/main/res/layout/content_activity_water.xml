<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_water"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73CFEA"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saifil.eeveeintents.ActivityWater"
    tools:showIn="@layout/activity_water">

    <TextView
        android:id="@+id/mytxt_water_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/textview_water"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/top_txt_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mytxt_water_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/textview_top_wtr_txt"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</RelativeLayout>
