<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saifil.bottomnavigation.MainActivity">


    <FrameLayout
        android:id="@+id/my_frame_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

    </FrameLayout>

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.saifil.bottomnavigation.NavFragment"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bottom_nav_height_small"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/nav_fragment" />

</RelativeLayout>
