<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_id"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:id="@+id/img_view_id"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1.0"-->
            <!--android:scaleType="centerCrop"-->
            <!--card_view:srcCompat="@mipmap/ic_launcher" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1.0"
                    android:scaleType="centerCrop"
                    card_view:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_view_id"
                    android:layout_alignLeft="@+id/img_view_id"
                    android:layout_alignStart="@+id/img_view_id"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:ellipsize="end"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="Project Title"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:typeface="sans" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_view_id"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/abel"
                android:text="DEMO TEXT"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_percent_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/abel"
                android:text="25% Complete"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>