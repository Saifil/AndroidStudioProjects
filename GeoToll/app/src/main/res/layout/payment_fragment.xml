<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Pay Toll"
        android:textSize="22sp" />

    <Spinner
        android:id="@+id/mySpinner_id"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myToll_spinner_id"
        android:layout_below="@+id/myToll_spinner_id"
        android:layout_marginTop="23dp"
        android:entries="@array/journeyType" />


    <Spinner
        android:id="@+id/myVehicle_id"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mySpinner_id"
        android:layout_alignTop="@+id/textView4"
        android:entries="@array/VehicleType" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mySpinner_id"
        android:layout_alignBottom="@+id/mySpinner_id"
        android:layout_alignStart="@+id/myToll_spinner_id"
        android:text="Journey"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cost_disp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myVehicle_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:textSize="22sp" />

    <Button
        android:id="@+id/payTollbtn_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:onClick="onMakePayment"
        android:text="Pay"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/mySpinner_id"
        android:layout_marginTop="18dp"
        android:text="Vehicle"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Spinner
        android:id="@+id/myToll_spinner_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_my_toll_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:entries="@array/array_entry_toll">

    </Spinner>

    <TextView
        android:id="@+id/display_my_toll_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/myToll_spinner_id"
        android:layout_below="@+id/textView"
        android:layout_marginTop="23dp"
        android:text="Select a Toll"
        android:textSize="18sp" />

</RelativeLayout>