<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saifil.power.IndividualProject">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/proj_img_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="210dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_proj_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_owner_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Saifil Momin"
                    android:textSize="14sp" />

                <!--align next to right-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_days_left_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 days to go" />


            </LinearLayout>

            <TextView
                android:id="@+id/category_txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/abel"
                android:text="Sanitation"
                android:textStyle="bold" />

            <!--<TextView-->
            <!--android:id="@+id/txt_ower_id"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="By Saifil Momin"-->
            <!--android:textSize="14sp" />-->

            <TextView
                android:id="@+id/desc_teaser_id"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/abel"
                android:text="TextView"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/readmore_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Read more"
                    android:textColor="#000000" />

                <!--align next to right-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/progress_fund_txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abel"
                    android:text="25% funded" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/percent_comp_id"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:max="100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/pledged_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abel"
                    android:text="65433 \npledged of 150000"
                    android:textSize="16sp" />

                <!--align next to right-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/hired_txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/abel"
                    android:text="4 / 5\nwomen hired"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />
            </LinearLayout>

            <!--<hr>-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#e6e3dd" />

            <Button
                android:id="@+id/fund_btn_id"
                style="@style/button_custom.full_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Back this project"
                android:textSize="18sp" />

            <Button
                android:id="@+id/hire_btn_id"
                style="@style/button_custom.full_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Apply for job"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abel"
                    android:text="About Project"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--align next to right-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/location_txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/abel"
                    android:text="Mumbai | Maharashtra"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/project_desc_txt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/abel"
                android:textColor="#000000"
                android:textSize="18sp" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>
