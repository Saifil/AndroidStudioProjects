<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saifil.tollplaza.ProfileActivity">

    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:entries="@array/myAuto"
        android:minWidth="320dp" />

    <TextView
        android:id="@+id/myTextHehe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mySpinner"
        android:layout_alignStart="@+id/mySpinner"
        android:layout_marginBottom="45dp"
        android:text="Select Vehicle Type"
        android:textSize="22sp" />

    <Button
        android:id="@+id/myAutobtn"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onSaveAuto"
        android:text="Save" />

</RelativeLayout>
