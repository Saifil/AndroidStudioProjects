<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_second_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hariyamaback"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saifil.hariyamabmi.CalculatePage"
    tools:showIn="@layout/activity_calculate_page">

    <EditText
        android:id="@+id/weigth_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:width="280dp"
        android:ems="10"
        android:hint="@string/weight_tp_text"
        android:inputType="numberDecimal"
        android:textColorLink="#0a5789" />

    <EditText
        android:id="@+id/height_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weigth_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:width="280dp"
        android:ems="10"
        android:hint="@string/height_ip_text"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#0a5789"
        android:onClick="calculateMyBMI"
        android:padding="3dp"
        android:text="@string/button_go"
        android:textColor="#e6e3dd"
        android:textSize="18sp" />
</RelativeLayout>
